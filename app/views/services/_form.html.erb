<%=form_for @service,:html=>{:multipart=>true} do |f|%>

    <%=f.label :imagen,:class=>'label'%>
    <%if @service.imagen_url.to_s!='' %>
        <%=imagentam(@service,'64x64')%>
        <%= f.check_box :remove_imagen %>
        Borrar imagen
    <%end%>
    <br/>
    <%= f.file_field :imagen %> 
     <%=f.label :descripcion,:class=>'label'%>
     <%=f.text_field :descripcion%>

    <br/><br/>
    <%=f.submit 'Guardar',:class=>'btn btn-success'%> o <%=link_to 'cancelar',services_path%>
<%end%>
