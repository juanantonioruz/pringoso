<%=form_for @nombre_relacion,:html=>{:multipart=>true} do |f|%>

    <%=f.label :nombre1,:class=>'label'%>
    <%=f.text_field :nombre1%>  
    <%=f.label :nombre2,:class=>'label'%>
    <%=f.text_field :nombre2%>  

    <br/><br/>
    <%=f.submit 'Guardar',:class=>'btn btn-success'%> o <%=link_to 'cancelar',nombre_relacions_path%>
<%end%>
