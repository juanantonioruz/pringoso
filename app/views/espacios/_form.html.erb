<%=cargaeditor%>
<%=form_for [@museo,@espacio],:html=>{:multipart=>true} do |f|%>

    <%=f.label :nombre,:class=>'label'%>
    <%=f.text_field :nombre%>    


    <%=f.label :idplano,:class=>'label'%>
    <%=f.text_field :idplano%> 

    <%=f.label :imagen,:class=>'label'%>
    <%if @espacio.imagen_url.to_s!='' %>
        <%=imagentam(@espacio,'64x64')%>
        <%= f.check_box :remove_imagen %>
        Borrar imagen
    <%end%>

    <br/>
    <%= f.file_field :imagen %> 

    <%=f.label :descripcion,:class=>'label'%>
    <%=f.text_area :descripcion,:class=>'tinymce'%>

    <br/>
    <%=f.submit 'Guardar',:class=>'btn btn-success'%> o <%=link_to 'cancelar',museo_espacios_path(@museo)%>
<%end%>
