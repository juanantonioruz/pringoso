<%=form_for [@museo,@entorno,@urbano],:html=>{:multipart=>true} do |f|%>

    <%=f.label :nombre,:class=>'label'%>
    <%=f.text_field :nombre%>  

    <%=f.label :descripcion,:class=>'label'%>
    <%=f.text_area :descripcion,:size=>'30x5'%>
    
     <%=f.label :imagen,:class=>'label'%>
    <%if @urbano.imagen_url.to_s!='' %>
        <%=imagentam(@urbano,'64x64')%>
        <%= f.check_box :remove_imagen %>
        Borrar imagen
    <%end%>
    <br/>
    <%= f.file_field :imagen %> 

    <%=etiquetar @urbano%>

    <label class='label'>Coordenadas: Latitud / Longitud</label>
     <p><b>Latitud:</b>&nbsp<%=f.text_field :x%>&nbsp;<b>Longitud:</b>  <%=f.text_field  :y%></p>
    <br/>

    <br/>
    <%=f.submit 'Guardar',:class=>'btn btn-success'%> o <%=link_to 'cancelar',museo_entorno_urbanos_path(@museo)%>
<%end%>
